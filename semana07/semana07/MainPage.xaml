<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:semana07"
             x:Class="semana07.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="Red"></Setter>
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="Green"></Setter>
            </Style>

            <Style x:Key="styleButtomDemo"  TargetType="Button">
                <Setter Property="TextColor" Value="Green"></Setter>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <Entry Text="Primero"></Entry>
        <Entry Text="Segundo"></Entry>
        <Entry Text="Tercero"></Entry>
        <local:CustomEntry Text="Mi entry nuevo"></local:CustomEntry>

    </StackLayout>

</ContentPage>
